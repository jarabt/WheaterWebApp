<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Wheater Web App</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Long+Cang&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles/main.css" />
  </head>
  <body>
    <div class="container">
      <div class="left">
        <h2>Hills</h2>
        <ul>
          <% hills.forEach(element => { %>
          <li>
            <a class="hill" href="/<%= element.id %>"><%= element.name %></a>
          </li>
          <% }); %>
        </ul>
      </div>
      <div class="right">
        <h2>Forecast</h2>
        <% if (locals.hill) { %>
        <h4>Hill Info</h4>
        <li><%= hill.name %></li>
        <li><%= hill.mountain %></li>
        <li><%= hill.height%>m</li>
        <h4>Daily Snow Fall Sum</h4>
        <table>
          <% for (let i=0; i < hill.time.length; i++) { %>
          <tr>
            <td><%= new Date(hill.time[i]).toLocaleDateString() %></td>
            <td class="value"><%= hill.snow[i] %>cm</td>
          </tr>
          <% }; %>
        </table>
        <h4>Daily Maximal Temps</h4>
        <table>
          <% for (let i=0; i < hill.time.length; i++) { %>
          <tr>
            <td><%= new Date(hill.time[i]).toLocaleDateString() %></td>
            <td class="value"><%= hill.temp[i]%>â„ƒ</td>
          </tr>
          <% }; %>
        </table>

        <% } else { %>
        <h4>Click on a hill</h4>
        <h4>ðŸ‘ˆ</h4>
        <% } %>
      </div>
    </div>
  </body>
</html>
